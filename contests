<script>
    $(document).ready(function(e){
        init(e);
        function renderAll (){
            var events = getEventsList().sortBy(function(o){ return o.end_date });
            var published_contests = [];
            $.each( events , function( key, val ){
                if(val.tags == "contests"){
                    today = moment();
                    webDate = moment(val.show_on_web_date);
                    if (today >= webDate) {
                        published_contests.push(val)
                    } 
                }
            });
            if(published_contests.length > 0){
                renderEvents("#promos_container","#promos_template", published_contests, "Devonshire Mall");
            } else {
                $('#no_contests').show()
            }
            show_content();
        }
		loadMallDataCached(renderAll); 
    })
</script>