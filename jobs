<script>
    $(document).ready(function(e){
        init(e);
        function renderAll (){
            var jobs = getJobsList().sortBy(function(o){ return o.name});
            var published_jobs = [];
            $.each( jobs , function( key, val ){
                today = moment();
                webDate = moment(val.show_on_web_date);
                if (today >= webDate) {
                    published_jobs.push(val)
                } 
            });
            if(published_jobs.length > 0){
                renderJobs('#jobs_container', '#jobs_template', jobs, "Virginia Gateway");
            } else {
                $('#no_jobs').show()
            }
            show_content();
        }
		loadMallDataCached(renderAll); 
    })
</script>