<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            prefix = get_prefix();
            var directions_json = prefix + "/pages/devonshire-directions.json"
            var parking_json = prefix + "/pages/devonshire-parking.json"
            $.getJSON(directions_json).done(function(data) {
                $('#mm_page_content_directions').html(data.body);
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            }); 
            $.getJSON(parking_json).done(function(data) {
                $('#mm_page_content_parking').html(data.body);
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            }); 
            show_content();
        }
        loadMallDataCached(renderAll); 
    })
</script>